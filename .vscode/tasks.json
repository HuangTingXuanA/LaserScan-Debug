{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p ${workspaceFolder}/bin && /usr/local/cuda/bin/nvcc -G -g -O0 -arch=sm_86 -Xcompiler \"-g -O0 -fno-omit-frame-pointer -fopenmp\" -I${workspaceFolder}/include ${workspaceFolder}/src/*.cpp -o ${workspaceFolder}/bin/main.out $(pkg-config --cflags --libs opencv4) -L/usr/local/cuda/lib64 -lcudart -lcublas -lcusolver -lcurand -lcuda -ltbb"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc",
                "$nvcc"
            ],
            "detail": "Debug 编译配置，支持 host/device 调试"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}